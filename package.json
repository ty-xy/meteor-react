{
  "name": "eJianLian-web",
  "private": true,
  "scripts": {
    "start": "meteor npm i && meteor run",
    "dev": "meteor run",
    "pre-commit-log": "echo \"开始 eslint 检测, 通过后才允许 git commit\"",
    "lint": "eslint . --ext js,jsx --ignore-pattern .eslintignore --cache"
  },
  "eslintConfig": {
    "extends": "@meteorjs/eslint-config-meteor"
  },
  "pre-commit": [
    "pre-commit-log",
    "lint"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      },
      "postcss-pxtorem": {
        "rootValue": 16,
        "unitPrecision": 5,
        "propList": [
          "*",
          "!border"
        ],
        "selectorBlackList": [],
        "replace": true,
        "mediaQuery": false,
        "minPixelValue": 0
      }
    }
  },
  "dependencies": {
    "antd": "^2.13.4",
    "babel-runtime": "^6.20.0",
    "bcrypt": "^1.0.3",
    "classnames": "^2.2.5",
    "date-format": "^1.1.0",
    "history": "^4.7.2",
    "imports": "^1.0.0",
    "indexof": "0.0.1",
    "meteor-node-stubs": "~0.2.4",
    "mobx": "^3.3.0",
    "mobx-react": "^4.3.3",
    "pinyin": "^2.8.3",
    "qiniu": "^7.0.8",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-modal-dialog": "^4.0.7",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "autoprefixer": "^7.1.4",
    "babel-eslint": "^8.0.1",
    "babel-plugin-import": "^1.6.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.7.2",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-meteor": "^4.1.4",
    "eslint-plugin-react": "^7.4.0",
    "postcss-pxtorem": "^4.0.1",
    "pre-commit": "^1.2.2",
    "pure-render-decorator": "^1.2.1",
    "react-transform-log-render": "^1.0.0",
    "react-transform-style": "^1.0.4"
  }
}
